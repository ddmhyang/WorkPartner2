<Window x:Class="WorkPartner.DailyFocusRatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="이날의 집중도 평가"
        Width="300" Height="170"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        Loaded="DailyFocusRatingWindow_Loaded">

    <Window.Resources>
        <ResourceDictionary>

            <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="#8A8A8A"/>
            <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
            <SolidColorBrush x:Key="SecondaryButtonBrush" Color="#F5F5F5"/>
            <SolidColorBrush x:Key="AccentColorBrush" Color="#2195F2"/>
            <SolidColorBrush x:Key="AccentTextBrush" Color="#FFFFFF"/>

            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentColorBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource AccentTextBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1A88E0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SecondaryButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource SecondaryButtonBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="StarRatingButton" TargetType="RadioButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Margin" Value="2"/>
                <Style.Triggers>
                    <Trigger Property="IsChecked" Value="True">
                        <Setter Property="Foreground" Value="#FFD700"/>
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="#FFEC8B"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="15" Background="{StaticResource WindowBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="이날의 집중도를 평가해주세요." 
                   HorizontalAlignment="Center" 
                   FontSize="14" 
                   Foreground="{StaticResource PrimaryTextBrush}" />

        <StackPanel x:Name="StarRatingPanel" Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <RadioButton x:Name="Star1" GroupName="DailyFocus" Tag="1" Content="★" Click="StarRating_Click" Style="{StaticResource StarRatingButton}" />
            <RadioButton x:Name="Star2" GroupName="DailyFocus" Tag="2" Content="★" Click="StarRating_Click" Style="{StaticResource StarRatingButton}" />
            <RadioButton x:Name="Star3" GroupName="DailyFocus" Tag="3" Content="★" Click="StarRating_Click" Style="{StaticResource StarRatingButton}" />
            <RadioButton x:Name="Star4" GroupName="DailyFocus" Tag="4" Content="★" Click="StarRating_Click" Style="{StaticResource StarRatingButton}" />
            <RadioButton x:Name
="Star5" GroupName="DailyFocus" Tag="5" Content="★" Click="StarRating_Click" Style="{StaticResource StarRatingButton}" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="취소" IsCancel="True" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0" Height="25" Width="40" />
            <Button Content="저장" IsDefault="True" Click="SaveButton_Click" Style="{StaticResource PrimaryButton}" Height="25" Width="40" />
        </StackPanel>
    </Grid>
</Window>