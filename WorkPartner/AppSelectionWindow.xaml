<Window x:Class="WorkPartner.AppSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://expression.blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkPartner"
        mc:Ignorable="d"
        Title="앱 선택" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView x:Name="AppListView" Grid.Row="0" Margin="0,0,0,10" MouseDoubleClick="AppListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="아이콘" Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Icon}" Width="24" Height="24"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="프로그램 이름" Width="300" DisplayMemberBinding="{Binding DisplayName}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="취소" Click="CancelButton_Click" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="선택" Click="OkButton_Click" Width="80" Height="30" Background="{DynamicResource AccentColorBrush}" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>