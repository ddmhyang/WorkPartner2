<UserControl x:Class="WorkPartner.StatisticsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://expression.blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource MainBackgroundBrush}"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <Style x:Key="CalendarCellStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="＜" Click="PrevMonth_Click" Style="{StaticResource NavButtonStyle}" Width="40" Height="40" FontSize="16"/>

                <TextBlock x:Name="CurrentMonthText" Text="2023년 11월" FontSize="24" FontWeight="Bold" 
                           Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center" Margin="20,0"/>

                <Button Content="＞" Click="NextMonth_Click" Style="{StaticResource NavButtonStyle}" Width="40" Height="40" FontSize="16"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="40,0,0,0">
                    <TextBlock Text="월 총 공부시간 : " FontSize="16" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <TextBlock x:Name="MonthTotalText" Text="00:00:00" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource AccentColorBrush}"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="15" Padding="15" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <UniformGrid Rows="1" Columns="7">
                        <TextBlock Text="일" Foreground="Red" HorizontalAlignment="Center"/>
                        <TextBlock Text="월" Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="화" Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="수" Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="목" Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="금" Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="토" Foreground="Blue" HorizontalAlignment="Center"/>
                    </UniformGrid>

                    <ItemsControl x:Name="CalendarGrid" Grid.Row="1" Margin="0,10,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="6" Columns="7"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CalendarCellStyle}" Opacity="{Binding Opacity}">
                                    <Grid>
                                        <TextBlock Text="{Binding Day}" FontSize="10" FontWeight="Bold" 
                                                   Foreground="{DynamicResource PrimaryTextBrush}" 
                                                   HorizontalAlignment="Left" VerticalAlignment="Top"/>

                                        <TextBlock Text="{Binding StudyTimeText}" FontSize="14" FontWeight="Bold"
                                                   Foreground="{DynamicResource AccentColorBrush}" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Visibility="{Binding HasStudyTime, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="15" Padding="15" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="이달의 과목별 시간" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,15"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="SubjectStatsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Width="10" Height="10" Fill="{Binding ColorBrush}" Margin="0,0,10,0"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SubjectName}" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding TimeText}" FontWeight="Bold" Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>