<UserControl x:Class="WorkPartner.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://expression.blend/2008" 
             xmlns:local="clr-namespace:WorkPartner"
             mc:Ignorable="d" 
             d:DesignHeight="722" d:DesignWidth="682"
             Background="White">
    <UserControl.Resources>
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="999">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ProcessListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="0,5,0,0"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="ProcessItemTemplate">
            <Border Background="#F5F5F5" CornerRadius="15" Padding="8,5" Margin="0,0,7,7">
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="삭제" Click="DeleteProcessMenuItem_Click" CommandParameter="{Binding}"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding Icon}" Width="23" Height="23" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding DisplayName}" FontSize="9" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
        <Canvas Width="682" Height="722">

            <Popup x:Name="AddProcessMethodPopup" Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                <Border Background="White" BorderBrush="#B0B0B0" BorderThickness="1" CornerRadius="5" Padding="5" Margin="5">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <Button Content="실행 중인 앱에서 선택" Padding="5" Click="Popup_SelectAppButton_Click"/>
                        <Button Content="활성 브라우저 탭 추가 (3초 후)" Padding="5" Margin="0,5,0,0" Click="Popup_AddActiveTabButton_Click"/>
                    </StackPanel>
                </Border>
            </Popup>

            <TextBlock Canvas.Left="39" Canvas.Top="40" Text="설정" FontSize="18" FontFamily="Pretendard" FontWeight="Bold"/>
            <TextBlock Canvas.Left="20" Canvas.Top="77" Text="미리 보기" FontSize="12" FontFamily="Pretendard" FontWeight="SemiBold"/>
            <TextBlock Canvas.Left="272" Canvas.Top="77" Text="개인 설정" FontSize="12" FontFamily="Pretendard" FontWeight="SemiBold"/>
            <TextBlock Canvas.Left="494" Canvas.Top="77" Text="일반" FontSize="12" FontFamily="Pretendard" FontWeight="SemiBold"/>
            <TextBlock Canvas.Left="19" Canvas.Top="241" Text="프로세스 설정" FontSize="12" FontFamily="Pretendard" FontWeight="SemiBold"/>
            <TextBlock Canvas.Left="19" Canvas.Top="403" Text="AI 태그 규칙 설정" FontSize="12" FontFamily="Pretendard" FontWeight="SemiBold"/>
            <TextBlock Canvas.Left="19" Canvas.Top="588" Text="집중모드 설정" FontSize="12" FontFamily="Pretendard" FontWeight="SemiBold"/>
            <TextBlock Canvas.Left="406" Canvas.Top="588" Text="데이터 관리" FontSize="12" FontFamily="Pretendard" FontWeight="SemiBold"/>
            <Border Canvas.Left="19" Canvas.Top="95" Width="247" Height="123" BorderBrush="#2195F2" BorderThickness="2" CornerRadius="10">
                <Grid>
                    <local:CharacterDisplay x:Name="CharacterPreview"/>
                    <TextBlock x:Name="UsernameTextBlock" Text="사용자" Canvas.Left="47" Canvas.Top="115" FontSize="20" FontFamily="Pretendard" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10">
                        <Image Source="/images/coin.png" Width="19" Height="19"/>
                        <TextBlock x:Name="CoinTextBlock" Text="50" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            <Border Canvas.Left="272" Canvas.Top="95" Width="216" Height="123" BorderBrush="#E8E8E8" BorderThickness="2" CornerRadius="10">
                <StackPanel Margin="15">
                    <TextBlock Text="별명" FontSize="10"/>
                    <TextBox x:Name="UsernameTextBox" Margin="0,2,0,5" LostFocus="UsernameTextBox_LostFocus"/>
                    <TextBlock Text="배경" FontSize="10" Margin="0,5,0,2"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="LightModeRadioButton" Content="라이트 모드" FontSize="10" IsChecked="True" Checked="Theme_Changed"/>
                        <RadioButton x:Name="DarkModeRadioButton" Content="다크 모드" FontSize="10" Margin="10,0,0,0" Checked="Theme_Changed"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Canvas.Left="494" Canvas.Top="95" Width="170" Height="123" BorderBrush="#E8E8E8" BorderThickness="2" CornerRadius="10">
                <StackPanel Margin="10">
                    <CheckBox x:Name="IdleDetectionCheckBox" Content="자리 비움 감지" FontSize="10" Checked="Setting_Changed" Unchecked="Setting_Changed"/>
                    <StackPanel Orientation="Horizontal" Margin="20,2,0,5">
                        <TextBlock Text="감지 시간(초):" FontSize="10" Foreground="#979797"/>
                        <TextBox x:Name="IdleTimeoutTextBox" Width="24" Margin="5,0,0,0" TextChanged="Setting_Changed"/>
                    </StackPanel>
                    <CheckBox x:Name="MiniTimerCheckBox" Content="미니 타이머 사용" FontSize="10" Checked="Setting_Changed" Unchecked="Setting_Changed"/>
                </StackPanel>
            </Border>
            <Border Canvas.Left="19" Canvas.Top="259" Width="645" Height="121" BorderBrush="#E8E8E8" BorderThickness="2" CornerRadius="10">
                <Grid Margin="15,10,15,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0" Margin="0,0,10,0">
                        <Grid DockPanel.Dock="Top">
                            <TextBlock Text="작업 프로그램 / 사이트" FontSize="10" VerticalAlignment="Center"/>
                            <Button Content="+" Style="{StaticResource AddButtonStyle}" HorizontalAlignment="Right" Tag="Work" Click="AddProcessButton_Click"/>
                        </Grid>
                        <ListBox x:Name="WorkProcessListBox" ItemsSource="{Binding WorkProcessViewModels}" Style="{StaticResource ProcessListBoxStyle}" ItemTemplate="{StaticResource ProcessItemTemplate}" KeyDown="DeleteProcess_KeyDown" Tag="Work"/>
                    </DockPanel>
                    <DockPanel Grid.Column="1" Margin="5,0,5,0">
                        <Grid DockPanel.Dock="Top">
                            <TextBlock Text="수동 프로그램 / 사이트" FontSize="10" VerticalAlignment="Center"/>
                            <Button Content="+" Style="{StaticResource AddButtonStyle}" HorizontalAlignment="Right" Tag="Passive" Click="AddProcessButton_Click"/>
                        </Grid>
                        <ListBox x:Name="PassiveProcessListBox" ItemsSource="{Binding PassiveProcessViewModels}" Style="{StaticResource ProcessListBoxStyle}" ItemTemplate="{StaticResource ProcessItemTemplate}" KeyDown="DeleteProcess_KeyDown" Tag="Passive"/>
                    </DockPanel>
                    <DockPanel Grid.Column="2" Margin="10,0,0,0">
                        <Grid DockPanel.Dock="Top">
                            <TextBlock Text="방해 프로그램 / 사이트" FontSize="10" VerticalAlignment="Center"/>
                            <Button Content="+" Style="{StaticResource AddButtonStyle}" HorizontalAlignment="Right" Tag="Distraction" Click="AddProcessButton_Click"/>
                        </Grid>
                        <ListBox x:Name="DistractionProcessListBox" ItemsSource="{Binding DistractionProcessViewModels}" Style="{StaticResource ProcessListBoxStyle}" ItemTemplate="{StaticResource ProcessItemTemplate}" KeyDown="DeleteProcess_KeyDown" Tag="Distraction"/>
                    </DockPanel>
                </Grid>
            </Border>
            <Border Canvas.Left="19" Canvas.Top="421" Width="645" Height="144" BorderBrush="#E8E8E8" BorderThickness="2" CornerRadius="10">
                <TextBlock Text="TODO: AI 태그 규칙 UI" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
            </Border>
            <Border Canvas.Left="19" Canvas.Top="606" Width="380" Height="81" BorderBrush="#E8E8E8" BorderThickness="2" CornerRadius="10">
                <StackPanel Margin="10">
                    <TextBlock Text="경고 메세지" FontSize="10"/>
                    <TextBox Margin="0,2,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="경고 간격 시간(초):" FontSize="10"/>
                        <TextBox Width="24" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Canvas.Left="406" Canvas.Top="606" Width="259" Height="81" Background="#FFF0F0" BorderBrush="#FFA4A4" BorderThickness="2" CornerRadius="10">
                <StackPanel Margin="10">
                    <TextBlock Text="이 작업은 되돌릴 수 없습니다!" Foreground="Red" FontWeight="SemiBold"/>
                    <TextBlock Text="모든 데이터가 영구적으로 삭제됩니다." FontSize="10" TextWrapping="Wrap" Foreground="Red" Margin="0,2,0,5"/>
                    <Button Content="모든 데이터 초기화" Background="Red" Foreground="White" HorizontalAlignment="Right" Width="84" Height="15" FontSize="8"/>
                </StackPanel>
            </Border>
        </Canvas>
    </Viewbox>
</UserControl>