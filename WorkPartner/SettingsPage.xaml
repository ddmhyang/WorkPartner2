<UserControl x:Class="WorkPartner.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://expression.blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000"
             Background="{DynamicResource MainBackgroundBrush}"
             UseLayoutRounding="True"
             FontFamily="Pretendard">

    <UserControl.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentColorBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.2" Color="Black"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="2" ShadowDepth="0" Opacity="0.1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98" CenterX="0.5" CenterY="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AddIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentColorBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="16" BorderThickness="1" BorderBrush="Transparent">
                            <Path Data="M 19,13 H 13 V 19 H 11 V 13 H 5 V 11 H 11 V 5 H 13 V 11 H 19 V 13 Z" 
                                  Fill="{TemplateBinding Foreground}" 
                                  Stretch="Uniform" 
                                  Width="14" Height="14"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A888888"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#33888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BigCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <Border x:Name="Border" 
                                    Width="20" Height="20" 
                                    CornerRadius="4" 
                                    BorderThickness="1.5" 
                                    BorderBrush="{DynamicResource SecondaryTextBrush}" 
                                    Background="Transparent">
                            </Border>

                            <Path x:Name="CheckMark" 
                                  Data="M 4,10 L 8,14 L 16,6" 
                                  Stroke="White" 
                                  StrokeThickness="2.5" 
                                  StrokeEndLineCap="Round"
                                  StrokeStartLineCap="Round"
                                  Visibility="Collapsed" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentColorBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentColorBrush}"/>
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryTextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ColorRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Ellipse x:Name="OuterRing" Stroke="{TemplateBinding Background}" StrokeThickness="2" Width="30" Height="30" Opacity="0"/>
                            <Ellipse x:Name="ColorCircle" Fill="{TemplateBinding Background}" Width="15" Height="15"/>
                            <Path x:Name="CheckMark" Data="M 6,12 L 10,16 L 18,8" Stroke="White" StrokeThickness="2.5" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="OuterRing" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="ProcessItemTemplate">
            <DockPanel LastChildFill="True" Margin="5,2">
                <Image Source="{Binding Icon}" Width="16" Height="16" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                <Button Content="-" Click="DeleteProcessButton_Click" DockPanel.Dock="Right" Width="20" Height="20" 
                        Background="Transparent" BorderThickness="0" Foreground="#FF5E5E" Cursor="Hand" FontWeight="Bold"/>
                <TextBlock Text="{Binding DisplayName}" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
            </DockPanel>
        </DataTemplate>

        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="Margin" Value="10,10,0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="설정" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}" Margin="5,0,0,20"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                        <StackPanel>
                            <TextBlock Text="테마 및 디자인" Style="{StaticResource SectionTitleStyle}"/>

                            <StackPanel Orientation="Horizontal" Margin="10,0,0,15">
                                <RadioButton x:Name="LightModeRadioButton" Content="라이트" GroupName="Theme" Margin="0,0,15,0" Checked="Theme_Changed" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <RadioButton x:Name="DarkModeRadioButton" Content="다크" GroupName="Theme" Checked="Theme_Changed" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            </StackPanel>

                            <TextBlock Text="강조 색상" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryTextBrush}" Margin="10,0,0,8"/>
                            <WrapPanel Margin="7,0,0,0">
                                <RadioButton x:Name="Color2195F2" Tag="#2195F2" Background="#2195F2" Style="{StaticResource ColorRadioButtonStyle}" Checked="AccentColor_Changed"/>
                                <RadioButton x:Name="ColorFF5722" Tag="#FF5722" Background="#FF5722" Style="{StaticResource ColorRadioButtonStyle}" Checked="AccentColor_Changed"/>
                                <RadioButton x:Name="Color4CAF50" Tag="#4CAF50" Background="#4CAF50" Style="{StaticResource ColorRadioButtonStyle}" Checked="AccentColor_Changed"/>
                                <RadioButton x:Name="Color9C27B0" Tag="#9C27B0" Background="#9C27B0" Style="{StaticResource ColorRadioButtonStyle}" Checked="AccentColor_Changed"/>
                                <RadioButton x:Name="ColorFFC107" Tag="#FFC107" Background="#FFC107" Style="{StaticResource ColorRadioButtonStyle}" Checked="AccentColor_Changed"/>
                                <RadioButton x:Name="ColorE91E63" Tag="#E91E63" Background="#E91E63" Style="{StaticResource ColorRadioButtonStyle}" Checked="AccentColor_Changed"/>
                                <RadioButton x:Name="Color00BCD4" Tag="#00BCD4" Background="#00BCD4" Style="{StaticResource ColorRadioButtonStyle}" Checked="AccentColor_Changed"/>
                                <RadioButton x:Name="Color607D8B" Tag="#607D8B" Background="#607D8B" Style="{StaticResource ColorRadioButtonStyle}" Checked="AccentColor_Changed"/>
                                <RadioButton x:Name="Color795548" Tag="#795548" Background="#795548" Style="{StaticResource ColorRadioButtonStyle}" Checked="AccentColor_Changed"/>
                                <RadioButton x:Name="ColorD50000" Tag="#D50000" Background="#D50000" Style="{StaticResource ColorRadioButtonStyle}" Checked="AccentColor_Changed"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}">
                        <StackPanel>
                            <TextBlock Text="집중 모드" Style="{StaticResource SectionTitleStyle}"/>
                            <CheckBox x:Name="IdleDetectionCheckBox" Content="자리 비움 &amp; 딴짓 감지" Click="Setting_Changed" Foreground="{DynamicResource PrimaryTextBrush}" Margin="10,5"/>
                            <TextBlock Text="활성화 시 설정한 방해 앱이 실행되거나 자리를 비우면 경고를 보냅니다." FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" Margin="10,10,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                        <StackPanel>
                            <TextBlock Text="데이터 관리" Style="{StaticResource SectionTitleStyle}"/>
                            <TextBlock Text="데이터 초기화 및 백업" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" Margin="10,0,0,15"/>

                            <Grid Margin="10,0,10,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="내보내기" Click="ExportDataButton_Click" Style="{StaticResource RoundedButtonStyle}" HorizontalAlignment="Stretch"/>
                                <Button Grid.Column="2" Content="불러오기" Click="ImportDataButton_Click" Style="{StaticResource RoundedButtonStyle}" HorizontalAlignment="Stretch"/>
                            </Grid>

                            <Button Content="초기화" Click="ResetDataButton_Click" Background="#FF5252" Style="{StaticResource RoundedButtonStyle}" HorizontalAlignment="Stretch" Margin="10,0,10,10"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <DockPanel Grid.Row="0" Margin="10,10,10,10" LastChildFill="True">
                                <Button Tag="Work" Click="AddProcessButton_Click" DockPanel.Dock="Right" 
                                        Style="{StaticResource AddIconButtonStyle}" ToolTip="작업 앱 추가"/>
                                <TextBlock Text="작업 앱" Style="{StaticResource SectionTitleStyle}" Margin="0" VerticalAlignment="Center"/>
                            </DockPanel>

                            <ListBox x:Name="WorkProcessList" Grid.Row="1" 
                                     ItemsSource="{Binding WorkProcessViewModels}" 
                                     MinHeight="100" 
                                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                     PreviewMouseWheel="ListBox_PreviewMouseWheel"
                                     Background="Transparent" BorderThickness="0" 
                                     ItemTemplate="{StaticResource ProcessItemTemplate}"/>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <DockPanel Grid.Row="0" Margin="10,10,10,10" LastChildFill="True">
                                <Button Tag="Passive" Click="AddProcessButton_Click" DockPanel.Dock="Right" 
                                        Style="{StaticResource AddIconButtonStyle}" ToolTip="수동 앱 추가"/>
                                <TextBlock Text="수동 앱" Style="{StaticResource SectionTitleStyle}" Margin="0" VerticalAlignment="Center"/>
                            </DockPanel>
                            <ListBox x:Name="PassiveProcessList" Grid.Row="1" 
                                     ItemsSource="{Binding PassiveProcessViewModels}" 
                                     MinHeight="100"
                                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                     PreviewMouseWheel="ListBox_PreviewMouseWheel"
                                     Background="Transparent" BorderThickness="0" 
                                     ItemTemplate="{StaticResource ProcessItemTemplate}"/>
                        </Grid>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <DockPanel Grid.Row="0" Margin="10,10,10,10" LastChildFill="True">
                                <Button Tag="Distraction" Click="AddProcessButton_Click" DockPanel.Dock="Right" 
                                        Style="{StaticResource AddIconButtonStyle}" ToolTip="방해 앱 추가"/>
                                <TextBlock Text="방해 앱" Style="{StaticResource SectionTitleStyle}" Margin="0" VerticalAlignment="Center"/>
                            </DockPanel>
                            <ListBox x:Name="DistractionProcessList" Grid.Row="1" 
                                     ItemsSource="{Binding DistractionProcessViewModels}" 
                                     MinHeight="100"
                                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                     PreviewMouseWheel="ListBox_PreviewMouseWheel"
                                     Background="Transparent" BorderThickness="0" 
                                     ItemTemplate="{StaticResource ProcessItemTemplate}"/>
                        </Grid>
                    </Border>
                </Grid>

                <Border Grid.Row="3" Style="{StaticResource CardBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="자동 태그 규칙" Style="{StaticResource SectionTitleStyle}"/>
                        <TextBlock Text="창 이름이나 브라우저 주소에 특정 단어가 포함되면 과목을 자동으로 변경합니다." FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" Margin="10,0,0,15"/>

                        <Grid Margin="10,0,10,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Margin="0,0,10,0">
                                <TextBox x:Name="TagRuleKeywordTextBox" Padding="8" Background="{DynamicResource MainBackgroundBrush}" BorderThickness="0" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock Text="키워드 (예: youtube)" IsHitTestVisible="False" Foreground="#999" VerticalAlignment="Center" Margin="10,0,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=TagRuleKeywordTextBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <Grid Grid.Column="1" Margin="0,0,10,0">
                                <TextBox x:Name="TagRuleTaskTextBox" Padding="8" Background="{DynamicResource MainBackgroundBrush}" BorderThickness="0" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock Text="과목명 (예: 휴식)" IsHitTestVisible="False" Foreground="#999" VerticalAlignment="Center" Margin="10,0,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=TagRuleTaskTextBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <Button Grid.Column="2" Content="규칙 추가" Click="AddTagRule_Click" Style="{StaticResource RoundedButtonStyle}" Width="80"/>
                        </Grid>

                        <ListBox x:Name="TagRulesListBox" 
                                 MinHeight="120" 
                                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                 PreviewMouseWheel="ListBox_PreviewMouseWheel"
                                 Background="{DynamicResource MainBackgroundBrush}" 
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 HorizontalContentAlignment="Stretch">

                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,0,0,5"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource MainBackgroundBrush}" 
                                            BorderBrush="{DynamicResource BorderBrush}" 
                                            BorderThickness="1" 
                                            CornerRadius="6" 
                                            Padding="15,8"
                                            Margin="5,2">

                                        <Grid VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding Keyword, Mode=OneWay}" 
                                                       FontWeight="Bold" 
                                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis" Margin="0,0,0,0"/>

                                            <TextBlock Grid.Column="1" 
                                                       Text="→" 
                                                       Foreground="{DynamicResource SecondaryTextBrush}" 
                                                       FontSize="14"
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"
                                                       Margin="10,0"/>

                                            <StackPanel Grid.Column="2" 
                                                        Orientation="Horizontal" 
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" Margin="5,0,0,0">

                                                <TextBlock Text="{Binding Subject, Mode=OneWay}" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="{DynamicResource AccentColorBrush}"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="150"/>
                                                <Button Content="X" 
                                                        CommandParameter="{Binding Keyword, Mode=OneWay}" 
                                                        Click="DeleteTagRule_Click"
                                                        Foreground="#FF5E5E" 
                                                        Background="Transparent" 
                                                        BorderThickness="0" 
                                                        Cursor="Hand" 
                                                        FontSize="11" 
                                                        FontWeight="Bold"
                                                        VerticalAlignment="Center"
                                                        Margin="10,0,0,0">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="Transparent">
                                                                            <ContentPresenter/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Opacity" Value="0.7"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

            </Grid>
        </ScrollViewer>

        <Popup x:Name="AddProcessMethodPopup" StaysOpen="False" Placement="Bottom">
            <Border Background="{DynamicResource SecondaryBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="0" Padding="5">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel>
                    <Button Content="실행 중인 앱에서 선택" Click="Popup_SelectAppButton_Click" 
                            Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15,8" Foreground="{DynamicResource PrimaryTextBrush}" Cursor="Hand"/>
                    <Button Content="활성 브라우저 탭 추가" Click="Popup_AddActiveTabButton_Click" 
                            Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="15,8" Foreground="{DynamicResource PrimaryTextBrush}" Cursor="Hand"/>
                </StackPanel>
            </Border>
        </Popup>

    </Grid>
</UserControl>