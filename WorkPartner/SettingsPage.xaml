<UserControl x:Class="WorkPartner.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://expression.blend/2008" 
             xmlns:local="clr-namespace:WorkPartner"
             mc:Ignorable="d" 
             d:DesignHeight="722" d:DesignWidth="682"
             Background="{DynamicResource MainBackgroundBrush}">
    <UserControl.Resources>

        <Style x:Key="AccentColorProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Foreground" Value="{DynamicResource AccentColorBrush}"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border x:Name="PART_Track" CornerRadius="2.5" Background="{TemplateBinding Background}"/>
                            <Border x:Name="PART_Indicator" CornerRadius="2.5" Background="{TemplateBinding Foreground}" HorizontalAlignment="Left"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedCornerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="4"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentColorBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="999">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ProcessListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="0,5,0,0"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ColorRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Width" Value="15"/>
            <Setter Property="Height" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5"/>
                            <TextBlock x:Name="check" Text="✓" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" FontWeight="Bold"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="check" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="ProcessItemTemplate">
            <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="15" Padding="8,5" Margin="0,0,7,7">
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="삭제" Click="DeleteProcessMenuItem_Click" CommandParameter="{Binding}"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding Icon}" Width="23" Height="23" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding DisplayName}" FontSize="9" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="{DynamicResource PrimaryTextBrush}"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
        <Canvas Width="682" Height="722">

            <Popup x:Name="AddProcessMethodPopup" Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                <Border Background="{DynamicResource MainBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="5" Padding="5" Margin="5">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <Button Content="실행 중인 앱에서 선택" Padding="5" Click="Popup_SelectAppButton_Click"/>
                        <Button Content="활성 브라우저 탭 추가 (3초 후)" Padding="5" Margin="0,5,0,0" Click="Popup_AddActiveTabButton_Click"/>
                    </StackPanel>
                </Border>
            </Popup>

            <TextBlock Canvas.Left="39" Canvas.Top="40" Text="설정" FontSize="18" FontFamily="Pretendard" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBlock Canvas.Left="20" Canvas.Top="77" Text="미리 보기" FontSize="12" FontFamily="Pretendard" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBlock Canvas.Left="272" Canvas.Top="77" Text="개인 설정" FontSize="12" FontFamily="Pretendard" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBlock Canvas.Left="494" Canvas.Top="77" Text="일반" FontSize="12" FontFamily="Pretendard" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBlock Canvas.Left="19" Canvas.Top="241" Text="프로세스 설정" FontSize="12" FontFamily="Pretendard" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBlock Canvas.Left="19" Canvas.Top="403" Text="AI 태그 규칙 설정" FontSize="12" FontFamily="Pretendard" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBlock Canvas.Left="19" Canvas.Top="588" Text="집중모드 설정" FontSize="12" FontFamily="Pretendard" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBlock Canvas.Left="406" Canvas.Top="588" Text="데이터 관리" FontSize="12" FontFamily="Pretendard" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}"/>

            <Border Canvas.Left="19" Canvas.Top="95" Width="247" Height="130" BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="2" CornerRadius="10">
                <Grid>
                    <local:CharacterDisplay x:Name="CharacterPreview" Width="128" Height="128" HorizontalAlignment="Left" Margin="115,-2,0,-2"/>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,15,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="UsernameTextBlock" Text="사용자" FontSize="16" FontFamily="Pretendard" FontWeight="Bold" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <Border Height="14" Background="{DynamicResource AccentColorBrush}" CornerRadius="4" Margin="8,0,0,0" Padding="8,1">
                                <TextBlock x:Name="LevelTextBlock" Text="Lv.1" Foreground="White" FontSize="8" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                        <ProgressBar x:Name="ExperienceBar" Width="100" Height="5" Value="50" Maximum="100" Margin="0,5,0,0" HorizontalAlignment="Left" Style="{StaticResource AccentColorProgressBarStyle}"/>
                        <TextBlock x:Name="CurrentTaskTextBlock" Text="현재 작업 : 없음" FontSize="10" Margin="0,5,0,0" Foreground="{DynamicResource PrimaryTextBrush}" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10">
                        <Image Source="/images/coin.png" Width="19" Height="19"/>
                        <TextBlock x:Name="CoinTextBlock" Text="50" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </StackPanel>
                    <Button Content="아바타 꾸미기" 
                            FontSize="8" 
                            FontWeight="SemiBold"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Bottom" 
                            Margin="13,0,0,38" 
                            Padding="10,3"
                            Click="GoToAvatarButton_Click"
                            Style="{StaticResource RoundedCornerButtonStyle}" Cursor="Hand" Width="93" Height="17"/>

                </Grid>
            </Border>

            <Border Canvas.Left="272" Canvas.Top="95" Width="216" Height="130" BorderBrush="{DynamicResource BorderBrush}" Background="{DynamicResource MainBackgroundBrush}" BorderThickness="2" CornerRadius="10">
                <StackPanel Margin="15">
                    <TextBlock Text="별명" FontSize="10" Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <TextBox x:Name="UsernameTextBox" Margin="0,2,0,5" LostFocus="UsernameTextBox_LostFocus"/>

                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="디스플레이 색상" FontSize="10"  Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <WrapPanel Width="110" Margin="0,2,0,0">
                                <RadioButton Style="{StaticResource ColorRadioButtonStyle}" Background="#D50000" Tag="#D50000" Checked="AccentColor_Changed" Margin="0,0,4,4"/>
                                <RadioButton Style="{StaticResource ColorRadioButtonStyle}" Background="#E65100" Tag="#E65100" Checked="AccentColor_Changed" Margin="0,0,4,4"/>
                                <RadioButton Style="{StaticResource ColorRadioButtonStyle}" Background="#F9A825" Tag="#F9A825" Checked="AccentColor_Changed" Margin="0,0,4,4"/>
                                <RadioButton Style="{StaticResource ColorRadioButtonStyle}" Background="#4CAF50" Tag="#4CAF50" Checked="AccentColor_Changed" Margin="0,0,4,4"/>
                                <RadioButton Style="{StaticResource ColorRadioButtonStyle}" Background="#00B0FF" Tag="#00B0FF" Checked="AccentColor_Changed" Margin="0,0,4,4"/>
                                <RadioButton Style="{StaticResource ColorRadioButtonStyle}" Background="#2195F2" Tag="#2195F2" Checked="AccentColor_Changed" Margin="0,0,4,4"/>
                                <RadioButton Style="{StaticResource ColorRadioButtonStyle}" Background="#6200EA" Tag="#6200EA" Checked="AccentColor_Changed" Margin="0,0,4,4"/>
                                <RadioButton Style="{StaticResource ColorRadioButtonStyle}" Background="#C51162" Tag="#C51162" Checked="AccentColor_Changed" Margin="0,0,4,4"/>
                                <RadioButton Style="{StaticResource ColorRadioButtonStyle}" Background="#795548" Tag="#795548" Checked="AccentColor_Changed" Margin="0,0,4,4"/>
                                <RadioButton Style="{StaticResource ColorRadioButtonStyle}" Background="#607D8B" Tag="#607D8B" Checked="AccentColor_Changed" Margin="0,0,4,4"/>
                            </WrapPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="배경" FontSize="10" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <RadioButton x:Name="LightModeRadioButton" Content="라이트" FontSize="10" IsChecked="True" Checked="Theme_Changed" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,2,0,0"/>
                            <RadioButton x:Name="DarkModeRadioButton" Content="다크" FontSize="10" Margin="0,2,0,0" Checked="Theme_Changed" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Canvas.Left="494" Canvas.Top="95" Width="170" Height="130" BorderBrush="{DynamicResource BorderBrush}" Background="{DynamicResource MainBackgroundBrush}" BorderThickness="2" CornerRadius="10">
                <StackPanel Margin="10">
                    <CheckBox x:Name="IdleDetectionCheckBox" 
          Content="집중 모드" 
          IsChecked="{Binding Settings.IsIdleDetectionEnabled, Mode=TwoWay}" 
          Canvas.Left="19" Canvas.Top="558" 
          Foreground="{DynamicResource PrimaryTextBrush}"
          Click="Setting_Changed"/>
                    <StackPanel Orientation="Horizontal" Margin="20,2,0,5">
                        <TextBlock Text="감지 시간(초):" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <TextBox x:Name="IdleTimeoutTextBox" Width="24" Margin="5,0,0,0" TextChanged="Setting_Changed"/>
                    </StackPanel>
                    <CheckBox x:Name="MiniTimerCheckBox" Content="미니 타이머 사용" FontSize="10" Checked="Setting_Changed" Unchecked="Setting_Changed" Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <StackPanel Margin="20,2,0,0">
                        <CheckBox x:Name="MiniTimerShowInfoCheckBox" Content="추가 정보" FontSize="10" Checked="Setting_Changed" Unchecked="Setting_Changed" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <CheckBox x:Name="MiniTimerShowCharacterCheckBox" Content="캐릭터" FontSize="10" Checked="Setting_Changed" Unchecked="Setting_Changed" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <CheckBox x:Name="MiniTimerShowBackgroundCheckBox" Content="배경화면" FontSize="10" Checked="Setting_Changed" Unchecked="Setting_Changed" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Canvas.Left="19" Canvas.Top="259" Width="645" Height="121" BorderBrush="{DynamicResource BorderBrush}" Background="{DynamicResource MainBackgroundBrush}" BorderThickness="2" CornerRadius="10">
                <Grid Margin="15,10,15,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0" Margin="0,0,10,0">
                        <Grid DockPanel.Dock="Top">
                            <TextBlock Text="작업 프로그램 / 사이트" FontSize="10" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <Button Content="+" Style="{StaticResource AddButtonStyle}" HorizontalAlignment="Right" Tag="Work" Click="AddProcessButton_Click"/>
                        </Grid>
                        <ListBox x:Name="WorkProcessListBox" ItemsSource="{Binding WorkProcessViewModels}" Style="{StaticResource ProcessListBoxStyle}" ItemTemplate="{StaticResource ProcessItemTemplate}" KeyDown="DeleteProcess_KeyDown" Tag="Work"/>
                    </DockPanel>
                    <DockPanel Grid.Column="1" Margin="5,0,5,0">
                        <Grid DockPanel.Dock="Top">
                            <TextBlock Text="수동 프로그램 / 사이트" FontSize="10" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <Button Content="+" Style="{StaticResource AddButtonStyle}" HorizontalAlignment="Right" Tag="Passive" Click="AddProcessButton_Click"/>
                        </Grid>
                        <ListBox x:Name="PassiveProcessListBox" ItemsSource="{Binding PassiveProcessViewModels}" Style="{StaticResource ProcessListBoxStyle}" ItemTemplate="{StaticResource ProcessItemTemplate}" KeyDown="DeleteProcess_KeyDown" Tag="Passive"/>
                    </DockPanel>
                    <DockPanel Grid.Column="2" Margin="10,0,0,0">
                        <Grid DockPanel.Dock="Top">
                            <TextBlock Text="방해 프로그램 / 사이트" FontSize="10" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <Button Content="+" Style="{StaticResource AddButtonStyle}" HorizontalAlignment="Right" Tag="Distraction" Click="AddProcessButton_Click"/>
                        </Grid>
                        <ListBox x:Name="DistractionProcessListBox" ItemsSource="{Binding DistractionProcessViewModels}" Style="{StaticResource ProcessListBoxStyle}" ItemTemplate="{StaticResource ProcessItemTemplate}" KeyDown="DeleteProcess_KeyDown" Tag="Distraction"/>
                    </DockPanel>
                </Grid>
            </Border>

            <Border Canvas.Left="19" Canvas.Top="421" Width="645" Height="144" BorderBrush="{DynamicResource BorderBrush}" Background="{DynamicResource MainBackgroundBrush}" BorderThickness="2" CornerRadius="10">
                <DockPanel Margin="10">
                    <Grid DockPanel.Dock="Top" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="TagRuleKeywordTextBox" Grid.Column="0" Margin="0,0,5,0" Tag="키워드"/>
                        <TextBox x:Name="TagRuleTaskTextBox" Grid.Column="1" Margin="5,0,0,0" Tag="과목"/>
                        <Button Grid.Column="2" Content="규칙 추가" Click="AddTagRule_Click" Style="{StaticResource RoundedCornerButtonStyle}" Padding="10,2" Margin="10,0,0,0"/>
                    </Grid>

                    <ListBox x:Name="TagRulesListBox" Background="Transparent" BorderThickness="0" Margin="5,10,5,5"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Key}" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <TextBlock Grid.Column="1" Text="→" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Value}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <Button Grid.Column="3" Content="×" FontSize="10" FontWeight="Bold" Foreground="Red" Background="Transparent" BorderThickness="0"
                                            Click="DeleteTagRule_Click" CommandParameter="{Binding Key}" Cursor="Hand"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <Border Canvas.Left="19" Canvas.Top="606" Width="380" Height="81" BorderBrush="{DynamicResource BorderBrush}" Background="{DynamicResource MainBackgroundBrush}" BorderThickness="2" CornerRadius="10">
                <StackPanel Margin="10">
                    <TextBlock Text="경고 메세지" FontSize="10" Foreground="{DynamicResource PrimaryTextBrush}"/>
                    <TextBox Margin="0,2,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="경고 간격 시간(초):" FontSize="10" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBox Width="24" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Canvas.Left="406" Canvas.Top="606" Width="259" Height="81"
                    Background="#FFF0F0" BorderBrush="#FFA4A4" BorderThickness="2" CornerRadius="10">
                <StackPanel Margin="10">
                    <TextBlock Text="이 작업은 되돌릴 수 없습니다!"
                               Foreground="Red" FontWeight="SemiBold"/>
                    <TextBlock Text="모든 데이터가 영구적으로 삭제됩니다."
                               FontSize="10" TextWrapping="Wrap" Foreground="Red" Margin="0,2,0,5"/>
                    <Button Content="모든 데이터 초기화" Background="Red" Foreground="White" HorizontalAlignment="Right" Width="84" Height="15" FontSize="8"/>
                </StackPanel>
            </Border>
        </Canvas>
    </Viewbox>
</UserControl>