<UserControl x:Class="WorkPartner.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://expression.blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="682"
             Background="{DynamicResource MainBackgroundBrush}">

    <UserControl.Resources>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentColorBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="ProcessItemTemplate">
            <DockPanel>
                <TextBlock Text="{Binding ProcessName}" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                <Button Content="-" Click="DeleteProcessButton_Click" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="10,0,0,0" Background="Transparent" BorderThickness="0" Foreground="Red"/>
            </DockPanel>
        </DataTemplate>

    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
        <Canvas Width="682" Height="800">
            <TextBlock Text="설정" Canvas.Left="30" Canvas.Top="40" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"/>

            <ScrollViewer Canvas.Left="30" Canvas.Top="90" Width="622" Height="680" VerticalScrollBarVisibility="Hidden">
                <StackPanel>
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="사용자 정보" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="이름" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <TextBlock x:Name="UsernameTextBlock" Text="사용자" Grid.Column="1" HorizontalAlignment="Right" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="프로세스 관리" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,10"/>

                            <DockPanel Margin="0,5">
                                <TextBlock Text="작업 앱 (자동 타이머)" DockPanel.Dock="Left" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <Button Content="+" Click="AddWorkProcessButton_Click" DockPanel.Dock="Right" Width="24" Height="24" Style="{StaticResource RoundedButtonStyle}"/>
                            </DockPanel>
                            <ListBox x:Name="WorkProcessList" Height="80" Margin="0,0,0,10" Background="{DynamicResource MainBackgroundBrush}" BorderThickness="0" ItemTemplate="{StaticResource ProcessItemTemplate}"/>

                            <DockPanel Margin="0,5">
                                <TextBlock Text="방해 앱 (경고 알림)" DockPanel.Dock="Left" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <Button Content="+" Click="AddDistractionProcessButton_Click" DockPanel.Dock="Right" Width="24" Height="24" Style="{StaticResource RoundedButtonStyle}"/>
                            </DockPanel>
                            <ListBox x:Name="DistractionProcessList" Height="80" Margin="0,0,0,10" Background="{DynamicResource MainBackgroundBrush}" BorderThickness="0" ItemTemplate="{StaticResource ProcessItemTemplate}"/>

                            <DockPanel Margin="0,5">
                                <TextBlock Text="수동 앱 (무시)" DockPanel.Dock="Left" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <Button Content="+" Click="AddPassiveProcessButton_Click" DockPanel.Dock="Right" Width="24" Height="24" Style="{StaticResource RoundedButtonStyle}"/>
                            </DockPanel>
                            <ListBox x:Name="PassiveProcessList" Height="80" Margin="0,0,0,10" Background="{DynamicResource MainBackgroundBrush}" BorderThickness="0" ItemTemplate="{StaticResource ProcessItemTemplate}"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="AI 자동 태그" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,5"/>
                            <TextBlock Text="창 이름에 특정 단어가 포함되면 과목을 자동으로 변경합니다." FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,10"/>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TagKeywordBox" Grid.Column="0" Margin="0,0,5,0" Padding="5" Background="{DynamicResource MainBackgroundBrush}" BorderThickness="0" Foreground="{DynamicResource PrimaryTextBrush}" Tag="키워드 (예: Visual Studio)"/>
                                <TextBox x:Name="TagSubjectBox" Grid.Column="1" Margin="5,0,5,0" Padding="5" Background="{DynamicResource MainBackgroundBrush}" BorderThickness="0" Foreground="{DynamicResource PrimaryTextBrush}" Tag="과목명 (예: 코딩)"/>
                                <Button Grid.Column="2" Content="+" Click="AddTagRule_Click" Style="{StaticResource RoundedButtonStyle}"/>
                            </Grid>

                            <ListBox x:Name="TagRuleList" Height="100" Background="{DynamicResource MainBackgroundBrush}" BorderThickness="0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="30"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Keyword}" Grid.Column="0" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                            <TextBlock Text="→" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                            <TextBlock Text="{Binding Subject}" Grid.Column="2" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource AccentColorBrush}"/>
                                            <Button Content="-" Click="DeleteTagRule_Click" Grid.Column="3" Background="Transparent" BorderThickness="0" Foreground="Red" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="데이터 관리" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="내보내기" Click="ExportDataButton_Click" Margin="0,0,10,0" Style="{StaticResource RoundedButtonStyle}"/>
                                <Button Content="불러오기" Click="ImportDataButton_Click" Margin="0,0,10,0" Style="{StaticResource RoundedButtonStyle}"/>
                                <Button Content="초기화" Click="ResetDataButton_Click" Background="#FF5555" Style="{StaticResource RoundedButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Canvas>
    </Viewbox>
</UserControl>