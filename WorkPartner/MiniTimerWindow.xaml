<Window x:Class="WorkPartner.MiniTimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://expression.blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WorkPartner Mini" Height="160" Width="300"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False">

    <Window.Resources>
        <Style x:Key="MiniButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource MainBackgroundBrush}" CornerRadius="10" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" MouseDown="Border_MouseDown" Background="Transparent">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/app_icon.ico" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Work Partner" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="×" HorizontalAlignment="Right" Click="CloseButton_Click" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}" Style="{StaticResource MiniButtonStyle}" Width="20" Height="20"/>
            </Grid>

            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border x:Name="CharacterBorder" Grid.Column="0" Width="80" Height="80" CornerRadius="10" BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="2" Margin="0,0,10,0">
                    <Grid>
                        <Image x:Name="MiniProfileImage" Stretch="Uniform" Margin="5" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="CurrentTaskText" Text="현재: 코딩" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,5"/>
                    <TextBlock x:Name="TimeText" Text="00:00:00" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>