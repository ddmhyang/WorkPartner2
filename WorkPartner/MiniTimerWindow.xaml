<Window x:Class="WorkPartner.MiniTimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Timer" Height="50" Width="150"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Border Background="#CC000000" CornerRadius="10">
            <TextBlock x:Name="TimerDisplay" Text="00:00:00" Foreground="White"
                       FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Button x:Name="CloseButton" Content="X" Width="20" Height="20"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5,-5,0"
                Click="CloseButton_Click" Style="{StaticResource {x:Type Button}}"/>
    </Grid>
</Window>