<Window x:Class="WorkPartner.MiniTimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://expression.blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WorkPartner Mini" 
        SizeToContent="WidthAndHeight"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" FontFamily="Freesentation 5 Medium"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <Style x:Key="MiniButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="MainBodyBorder" Grid.Row="0" 
                Background="{DynamicResource MainBackgroundBrush}" 
                CornerRadius="20" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1"
                Padding="15,8"
                HorizontalAlignment="Center">
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="CurrentTaskText" Text="현재: 코딩" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Center"/>
                <TextBlock x:Name="TimeText" Text="00:00:00" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}" FontFamily="Freesentation 9 Black" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Grid x:Name="KeyringArea" Grid.Row="1" HorizontalAlignment="Center" Margin="0,-3,0,0">
            <StackPanel HorizontalAlignment="Center">
                <Image x:Name="MiniProfileImage" 
                       Stretch="None"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Margin="0,2,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>