<UserControl x:Class="WorkPartner.CharacterDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkPartner"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <Grid>
        <!-- 
        레이어 순서 (XAML에서 먼저 선언된 요소가 뒤에 그려짐):
        배경 -> 방석 -> 뒷머리 -> 얼굴+몸 -> 앞머리 -> 눈 -> 입 -> 옷 -> 장신구
        -->

        <!-- 1. 배경 -->
        <Image x:Name="BackgroundPart" Stretch="Uniform" />

        <!-- 2. 방석 -->
        <Image x:Name="CushionPart" Stretch="Uniform" />

        <!-- 3. 뒷머리 -->
        <Image x:Name="HairBackPart" Stretch="Uniform" />

        <!-- 4. 얼굴+몸 (기본) -->
        <!-- 중요: /images/character/body.png 파일이 프로젝트에 포함되어 있어야 합니다. -->
        <Image x:Name="BodyPart" Source="/images/character/body.png" Stretch="Uniform" />

        <!-- 5. 앞머리 -->
        <Image x:Name="HairFrontPart" Stretch="Uniform" />

        <!-- 6. 눈 -->
        <Image x:Name="EyePart" Stretch="Uniform" />

        <!-- 7. 입 -->
        <Image x:Name="MouthPart" Stretch="Uniform" />

        <!-- 8. 옷 -->
        <Image x:Name="ClothesPart" Stretch="Uniform" />

        <!-- 9. 장신구 (최대 3개, 가장 위에 그려짐) -->
        <Image x:Name="AccessoryPart1" Stretch="Uniform" />
        <Image x:Name="AccessoryPart2" Stretch="Uniform" />
        <Image x:Name="AccessoryPart3" Stretch="Uniform" />
    </Grid>
</UserControl>
