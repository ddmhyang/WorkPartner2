<UserControl x:Class="WorkPartner.CharacterDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://expression.blend/2008" 
             xmlns:local="clr-namespace:WorkPartner"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <Image x:Name="Part_Background" RenderOptions.BitmapScalingMode="NearestNeighbor" />
        <Image x:Name="Part_Tail" RenderOptions.BitmapScalingMode="NearestNeighbor" />
        <Image x:Name="Part_Lower" RenderOptions.BitmapScalingMode="NearestNeighbor" />
        <Image x:Name="Part_Bottom" RenderOptions.BitmapScalingMode="NearestNeighbor" />

        <Image x:Name="Part_Shoes" RenderOptions.BitmapScalingMode="NearestNeighbor" />

        <Grid x:Name="AnimatedCharacterGrid">
            <Grid.RenderTransform>
                <TranslateTransform Y="0" />
            </Grid.RenderTransform>

            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimationUsingKeyFrames
                            Storyboard.TargetName="AnimatedCharacterGrid"
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">

                                <DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="0" />

                                <DiscreteDoubleKeyFrame KeyTime="0:0:0.5" Value="1" />

                                <DiscreteDoubleKeyFrame KeyTime="0:0:1.0" Value="0" />
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>

            <Image x:Name="Part_Upper" RenderOptions.BitmapScalingMode="NearestNeighbor" />
            <Image x:Name="Part_Top" RenderOptions.BitmapScalingMode="NearestNeighbor" />
            <Image x:Name="Part_Outerwear" RenderOptions.BitmapScalingMode="NearestNeighbor" />
            <Image x:Name="Part_Head" RenderOptions.BitmapScalingMode="NearestNeighbor" />
            <Image x:Name="Part_Scalp" RenderOptions.BitmapScalingMode="NearestNeighbor" />
            <Image x:Name="Part_BackHair" RenderOptions.BitmapScalingMode="NearestNeighbor" />
            <Image x:Name="Part_Face" RenderOptions.BitmapScalingMode="NearestNeighbor" />
            <Image x:Name="Part_AnimalEar" RenderOptions.BitmapScalingMode="NearestNeighbor" />
            <Image x:Name="Part_Accessory" RenderOptions.BitmapScalingMode="NearestNeighbor" />
            <Image x:Name="Part_FrontHair" RenderOptions.BitmapScalingMode="NearestNeighbor" />
        </Grid>
    </Grid>
</UserControl>