<UserControl x:Class="WorkPartner.CharacterDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://expression.blend/2008" 
             xmlns:local="clr-namespace:WorkPartner"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <Image x:Name="Part_Background" Stretch="Uniform" />

        <Image x:Name="Part_Cushion" Stretch="Uniform" />

        <Image x:Name="Part_HairBack" Stretch="Uniform" />

        <Image x:Name="Part_Body" Stretch="Uniform" />

        <Image x:Name="Part_HairFront" Stretch="Uniform" />

        <Image x:Name="Part_Eye" Stretch="Uniform" />

        <Image x:Name="Part_Mouth" Stretch="Uniform" />

        <Image x:Name="Part_Clothes" Stretch="Uniform" />

        <ItemsControl x:Name="Part_Accessories">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding ImagePath}" Stretch="Uniform">
                        <Image.Effect>
                            <local:HueShiftEffect HueShift="{Binding HueShift}" />
                        </Image.Effect>
                    </Image>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</UserControl>