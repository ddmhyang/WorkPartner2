<UserControl x:Class="WorkPartner.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://expression.blend/2008" 
             xmlns:local="clr-namespace:WorkPartner"
             mc:Ignorable="d" 
             d:DesignHeight="526" d:DesignWidth="682"
             IsVisibleChanged="DashboardPage_IsVisibleChanged"
             FontFamily="Pretendard">

    <Grid>
        <Canvas>
            <Border x:Name="PinnedMemoPanel" Canvas.Left="470" Canvas.Top="401" Width="181" Height="96" Background="#FFF9E3" CornerRadius="5" Visibility="Collapsed">
                <Grid>
                    <TextBlock Text="📌 고정된 메모" FontWeight="Bold" Margin="10,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="PinnedMemoContent" Margin="10,25,10,10" TextWrapping="Wrap" Foreground="#333"/>
                    <Button Content="x" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,2,5,0" Background="Transparent" BorderBrush="Transparent" Click="ClosePinnedMemo_Click"/>
                </Grid>
            </Border>

            <Grid Canvas.Left="239" Canvas.Top="60">
                <ScrollViewer Height="450" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="TimeTableContainer"/>
                </ScrollViewer>
                <Canvas x:Name="SelectionCanvas" Background="Transparent"/>
            </Grid>

            <Grid Canvas.Left="20" Canvas.Top="20">
                <TextBlock x:Name="UsernameDisplay" Text="{Binding Username}" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Image Source="/images/coin.png" Width="16" Height="16"/>
                    <TextBlock x:Name="CoinDisplay" Text="{Binding CoinsDisplay}" Margin="5,0,0,0"/>
                </StackPanel>
                <local:CharacterDisplay x:Name="CharacterPreview" Margin="0, 50, 0, 0" />
            </Grid>

            <TextBox x:Name="TaskInput" Text="{Binding NewTaskText, UpdateSourceTrigger=PropertyChanged}" KeyDown="TaskInput_KeyDown" Canvas.Left="20" Canvas.Top="200" Width="150"/>
            <Button Content="과목 추가" Command="{Binding AddTaskCommand}" Canvas.Left="175" Canvas.Top="200"/>
        </Canvas>
    </Grid>
</UserControl>