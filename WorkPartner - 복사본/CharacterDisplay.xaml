<UserControl x:Class="WorkPartner.CharacterDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://expression.blend/2008"
             xmlns:local="clr-namespace:WorkPartner"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Background="Transparent">
    <Grid>
        <Image x:Name="BackgroundImage" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill"/>

        <Viewbox Stretch="Uniform">
            <Canvas Width="300" Height="380">
                <Image x:Name="BodyImage" Width="150" Height="150" Canvas.Left="75" Canvas.Top="150"/>
                <Image x:Name="ClothesImage" Width="150" Height="150" Canvas.Left="75" Canvas.Top="150"/>
                <Image x:Name="EyeShapeImage" Width="150" Height="150" Canvas.Left="75" Canvas.Top="150"/>
                <Image x:Name="MouthShapeImage" Width="150" Height="150" Canvas.Left="75" Canvas.Top="150"/>
                <Image x:Name="HairStyleImage" Width="150" Height="150" Canvas.Left="75" Canvas.Top="150"/>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>