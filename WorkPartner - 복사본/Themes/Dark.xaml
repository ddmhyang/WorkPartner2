<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="MainBackgroundBrush" Color="#FF262626"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#FF3C3C3C"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="White"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#FF5A5A5A"/>

    <Color x:Key="AccentColor">#2195F2</Color>
    <SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource AccentColor}"/>

</ResourceDictionary>