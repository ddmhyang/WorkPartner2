<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 라이트 모드 색상 정의 -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#F0F2F5"/>
    <SolidColorBrush x:Key="SectionBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="TextBrush" Color="#333333"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="Gray"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
</ResourceDictionary>

